# Copia este archivo a .env y completa los valores.
# En el servidor: solo necesitas .env (producción).
# En local para pruebas SIN impresora: crea además .env.local con:
#   PRINTER_TYPE=simulation
#   PRINTER_INTERFACE=file
# Así no cambias .env y las impresiones se guardan en archivos (carpeta tickets/).

# Servidor
PORT=3000
NODE_ENV=development

# Base de datos
DATABASE_HOST=127.0.0.1
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=tu_password
DATABASE_NAME=comandero
DATABASE_CONNECTION_LIMIT=10

# Autenticación (usa secretos de al menos 32 caracteres)
JWT_ACCESS_SECRET=minimo_32_caracteres_para_access_secret
JWT_REFRESH_SECRET=minimo_32_caracteres_para_refresh_secret
JWT_ACCESS_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d

# Seguridad
CORS_ORIGIN=http://localhost:*,http://127.0.0.1:*
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Logging
LOG_PRETTY=true
LOG_LEVEL=debug

# Impresora térmica - producción (en servidor/laptop con impresora)
# Para pruebas sin impresora usa .env.local con PRINTER_TYPE=simulation y PRINTER_INTERFACE=file
PRINTER_TYPE=pos80
PRINTER_INTERFACE=usb
PRINTER_DEVICE=POS-80
PRINTER_PAPER_WIDTH=58
PRINTER_SIMULATION_PATH=./tickets
